{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.integration.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "roots": ["<rootDir>/test/integration/"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
